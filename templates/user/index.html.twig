{% extends 'base.html.twig' %}

{% block title %}
    Users
{% endblock %}
{% block body %}
    <div class="custom">My Own Css</div>
    {{ include ('fragments/hello.html.twig', {name: 'Booster IT'}) }}
    <table class="table">
        <tr class="table-secondary">
            <th>Firstname</th>
            <th>Name</th>
            <th>Age</th>
        </tr>
        <tbody>
        {% for user in users %}
            <tr class="table-{{ loop.index is odd ? 'warning':'danger' }}">
                <th>{{ user.firstname }}</th>
                <th>{{ user.name }}</th>
                <th>{{ user.age }}</th>
            </tr>
        {% else %}
            <tr colspan="3" class="table-danger">
                Il n'y a aucun utilisateur
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% for user in users %}
        {{ include ('fragments/hello.html.twig', {name: user.name}) }}
    {% endfor %}

    {{ render(controller('App\\Controller\\NoteController::index', {count: 10} )) }}
    {{ render(controller('App\\Controller\\NoteController::index')) }}
{% endblock %}

